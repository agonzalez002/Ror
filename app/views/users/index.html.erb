<h2>
  Users list :
</h2>

<p class="add"><%= link_to "+  Add user", new_user_path(), :class => "new" %></p>

<table>
  <thead>
    <th>ID</th>
    <th>Nom et Prénom</th>
    <th>Email</th>
    <th>Téléphone</th>
    <th>Date de naissance</th>
    <th>Action</th>
  </thead>
  <tbody>
    <%- @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user_path(user) do %> <%= user.last_name %> <%= user.first_name %> <%- end %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= link_to "X", user_path(user), method: :delete, data: {confirm: "Are you sure ?"} %></td>
      </tr>
    <%- end %>
  </tbody>
</table>
